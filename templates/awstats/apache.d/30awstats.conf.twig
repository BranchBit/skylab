Alias /stats "@config.projectsdir@/@project.name@/stats/cgi-bin"

<Location "/stats">
    AddHandler cgi-script .pl
    DirectoryIndex awstats.pl
</Location>

Alias /awstatsclasses 	"@config.projectsdir@/@project.name@/stats/classes/"
Alias /awstatscss 		"@config.projectsdir@/@project.name@/stats/css/"
Alias /awstatsicons 	"@config.projectsdir@/@project.name@/stats/icon/"
Alias /awstatsreport 	"@config.projectsdir@/@project.name@/stats/report/"

<IfModule mod_jk.c>
    JkUnMount       /stats          @project.name@
    JkUnMount       /stats/*        @project.name@
    JkUnMount       /awstatsicons   @project.name@
    JkUnMount       /awstatsicons/* @project.name@
    JkUnMount       /awstatsjs      @project.name@
    JkUnMount       /awstatsjs/*    @project.name@
    JkUnMount       /awstatsreport/*    @project.name@
</IfModule>
